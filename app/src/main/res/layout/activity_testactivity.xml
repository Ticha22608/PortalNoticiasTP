<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#181D17"
        tools:context=".testactivity">

    <TextView
            android:id="@+id/headerFavoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis favoritos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="8dp" />
    <TextView
            android:id="@+id/textoVacio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TodavÃ­a no guardaste favoritos."
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"
            android:paddingTop="8dp"
            android:textColor="#FFFFFF" />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFavoritos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_favorito"
            />

</LinearLayout>